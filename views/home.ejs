<%- include('partials/head') %>

  <body class="bg-gray-50 min-h-screen">
    <%- include('partials/nav') %>

      <!-- Main Content -->
      <main class="max-w-6xl mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to Airbnb</h1>

        <!-- Registered Homes -->
        <div class="mt-12">
          <h2 class="text-2xl font-semibold text-gray-800 mb-6">Available Homes</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <% if (registeredHomes && registeredHomes.length> 0) { %>
              <% registeredHomes.forEach(function(home) { %>
                <div
                  class="relative grid gap-10 rounded-2xl bg-white p-4 pb-2 ring ring-gray-950/5 @min-[theme(--breakpoint-lg)]:grid-cols-2 @min-[theme(--breakpoint-lg)]:px-20 @min-[theme(--breakpoint-lg)]:py-8 @min-[theme(--breakpoint-lg)]:pb-10 dark:bg-gray-950 dark:ring-white/10">
                  <div class="flex flex-1 flex-col">
                    <div
                      class="relative mb-4 overflow-hidden rounded-lg @max-[theme(--breakpoint-xl)]:-mx-4 @max-[theme(--breakpoint-xl)]:-mt-4 @min-[theme(--breakpoint-lg)]:hidden">
                      <div class="grid grid-cols-4 grid-rows-2 gap-2 @max-[theme(--breakpoint-lg)]:hidden">
                        <img alt="" src="https://cdn.pixabay.com/photo/2017/04/10/22/28/residence-2219972_1280.jpg"
                          class="col-span-4 h-[150px] w-full rounded-lg bg-gray-950/5 object-cover @min-[theme(--breakpoint-xl)]:col-span-2 @min-[theme(--breakpoint-xl)]:row-span-2 @min-[theme(--breakpoint-xl)]:aspect-square @min-[theme(--breakpoint-xl)]:h-[308px]">
                        <img alt="" src="https://cdn.pixabay.com/photo/2017/02/07/18/16/living-room-2046668_1280.jpg"
                          class="col-span-2 h-[150px] w-full rounded-lg bg-gray-950/5 @max-[theme(--breakpoint-xl)]:aspect-square @min-[theme(--breakpoint-xl)]:col-span-1">
                        <img alt="" src="https://cdn.pixabay.com/photo/2013/07/04/18/33/western-143213_1280.jpg"
                          class="col-span-2 h-[150px] w-full rounded-lg bg-gray-950/5 @max-[theme(--breakpoint-xl)]:aspect-square @min-[theme(--breakpoint-xl)]:col-span-1">
                        <div
                          class="absolute inset-0 flex flex-col justify-end gap-2 bg-linear-to-b from-transparent via-transparent to-gray-950 p-6 @min-[theme(--breakpoint-sm)]:hidden">
                        </div>
                      </div>
                      <span class="font-medium text-gray-500 @max-[theme(--breakpoint-sm)]:hidden dark:text-gray-500">
                        <%= home.houseName %>
                      </span>
                      <div
                        class="grid grid-cols-1 gap-4 @min-[theme(--breakpoint-sm)]:grid-cols-[1fr_auto] @min-[theme(--breakpoint-xl)]:grid-cols-1">
                        <div>
                          <span
                            class="mt-2 text-3xl font-semibold text-gray-950 @max-[theme(--breakpoint-sm)]:hidden dark:text-white">
                            <%= home.price %>
                          </span>
                          <span class="mt-2 flex items-center gap-2">
                            <!-- Star Icon and Rating Number Container -->
                            <span class="flex items-center gap-1 text-pink-600 dark:text-pink-500">
                              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                                aria-hidden="true" class="w-4 h-4">
                                <path fill-rule="evenodd"
                                  d="M8 1.75a.75.75 0 0 1 .692.462l1.41 3.393 3.664.293a.75.75 0 0 1 .428 1.317l-2.791 2.39.853 3.575a.75.75 0 0 1-1.12.814L7.998 12.08l-3.135 1.915a.75.75 0 0 1-1.12-.814l.852-3.574-2.79-2.39a.75.75 0 0 1 .427-1.318l3.663-.293 1.41-3.393A.75.75 0 0 1 8 1.75Z"
                                  clip-rule="evenodd"></path>
                              </svg>
                              <span class="text-sm font-medium">2.66</span>
                            </span>
                            <!-- Reviews and Location Info -->
                            <span class="text-sm text-gray-500">(128 reviews)</span>
                            <span class="text-pink-300 dark:text-gray-600">·</span>
                            <span class="text-sm font-medium text-pink-600 dark:text-pink-500">
                              <%= home.location %>
                            </span>
                          </span>
                        </div>
                        <div class="@min-[theme(--breakpoint-lg)]:hidden">
                          <button type="button"
                            class="w-full rounded-lg bg-pink-500 px-3 py-2 text-sm/6 font-bold text-white @min-[theme(--breakpoint-sm)]:w-auto">
                            Check availability
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <% }); %>
                  <% } else { %>
                    <div class="col-span-2 text-center py-12 bg-white rounded-2xl shadow-sm">
                      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                      <p class="text-gray-500 text-lg">No homes available yet. Be the first to add one!</p>
                    </div>
                    <% } %>
          </div>
        </div>

        <!-- Featured Section -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-8 mt-12">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Ready to host?</h2>
          <p class="text-gray-600 mb-6">Share your space and earn extra income by becoming a host on Airbnb.</p>
          <a href="/host/add-home"
            class="inline-block bg-gradient-to-r from-rose-500 to-rose-600 text-white px-6 py-3 rounded-lg hover:from-rose-600 hover:to-rose-700 transition duration-300">
            Get Started →
          </a>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-3 gap-6 mt-8">
          <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Easy to start</h3>
            <p class="text-gray-600">List your space in minutes and start hosting immediately.</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Safe and secure</h3>
            <p class="text-gray-600">We verify all guests and provide protection for hosts.</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Earn more</h3>
            <p class="text-gray-600">Set your own prices and earn extra income on your schedule.</p>
          </div>
        </div>
      </main>

      <!-- Footer -->
      <footer class="bg-gray-100 mt-12 py-8">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center text-gray-600">
            © 2024 Airbnb Clone. Made with Tailwind CSS.
          </div>
        </div>
      </footer>
  </body>

  </html>