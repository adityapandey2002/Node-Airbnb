<%- include('partials/head') %>

  <body class="bg-gray-50 min-h-screen">
    <%- include('partials/nav') %>

      <!-- Main Content -->
      <main class="max-w-6xl mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Welcome to Airbnb</h1>

        <!-- Registered Homes -->
        <div class="mt-12">
          <h2 class="text-2xl font-semibold text-gray-800 mb-6">Available Homes</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <% if (registeredHomes && registeredHomes.length> 0) { %>
              <% registeredHomes.forEach(function(home) { %>
                <div
                  class="bg-white rounded-2xl shadow-md hover:shadow-lg transition-shadow duration-300 overflow-hidden group">
                  <div class="p-4">
                    <div class="md:flex gap-6">
                      <!-- Image Section (40%) -->


                      <div
                        class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700">
                        <a href="#">
                          <img class="p-8 rounded-t-lg" src="/docs/images/products/apple-watch.png"
                            alt="product image" />
                        </a>
                        <div class="px-5 pb-5">
                          <a href="#">
                            <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white">Apple Watch
                              Series 7 GPS, Aluminium Case, Starlight Sport</h5>
                          </a>
                          <div class="flex items-center mt-2.5 mb-5">
                            <div class="flex items-center space-x-1 rtl:space-x-reverse">
                              <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor" viewBox="0 0 22 20">
                                <path
                                  d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                              </svg>
                              <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor" viewBox="0 0 22 20">
                                <path
                                  d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                              </svg>
                              <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor" viewBox="0 0 22 20">
                                <path
                                  d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                              </svg>
                              <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg"
                                fill="currentColor" viewBox="0 0 22 20">
                                <path
                                  d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                              </svg>
                              <svg class="w-4 h-4 text-gray-200 dark:text-gray-600" aria-hidden="true"
                                xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                                <path
                                  d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                              </svg>
                            </div>
                            <span
                              class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded-sm dark:bg-blue-200 dark:text-blue-800 ms-3">5.0</span>
                          </div>
                          <div class="flex items-center justify-between">
                            <span class="text-3xl font-bold text-gray-900 dark:text-white">$599</span>
                            <a href="#"
                              class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">Add
                              to cart</a>
                          </div>
                        </div>
                      </div>


                      <!-- Superhost Badge -->
                      <div class="flex items-center">
                        <span
                          class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-rose-100 text-rose-800">
                          <svg class="w-3 h-3 mr-1" viewBox="0 0 12 12" fill="currentColor">
                            <path
                              d="M3.75 7.5a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zm-6-3.75L2.25 0l1.5 3.75L0 4.5h3.75z" />
                          </svg>
                          Superhost
                        </span>
                      </div>
                    </div>

                    <!-- Price -->
                    <div class="text-right">
                      <div class="flex items-baseline gap-1">
                        <span class="font-semibold text-lg">₹<%= home.price %></span>
                        <span class="text-gray-500">/night</span>
                      </div>
                      <div class="text-sm text-gray-500 hover:text-gray-800 transition-colors">
                        ₹<%= home.price * 4 %> total
                      </div>
                    </div>
                  </div>
                </div>
          </div>
        </div>
        </div>
        <% }); %>
          <% } else { %>
            <div class="col-span-2 text-center py-12 bg-white rounded-2xl shadow-sm">
              <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                  d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
              </svg>
              <p class="text-gray-500 text-lg">No homes available yet. Be the first to add one!</p>
            </div>
            <% } %>
              </div>
              </div>

              <!-- Featured Section -->
              <div class="bg-white rounded-xl shadow-md p-6 mb-8 mt-12">
                <h2 class="text-2xl font-semibold text-gray-800 mb-4">Ready to host?</h2>
                <p class="text-gray-600 mb-6">Share your space and earn extra income by becoming a host on Airbnb.</p>
                <a href="/host/add-home"
                  class="inline-block bg-gradient-to-r from-rose-500 to-rose-600 text-white px-6 py-3 rounded-lg hover:from-rose-600 hover:to-rose-700 transition duration-300">
                  Get Started →
                </a>
              </div>

              <!-- Benefits Grid -->
              <div class="grid md:grid-cols-3 gap-6 mt-8">
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
                  <h3 class="text-xl font-semibold text-gray-800 mb-3">Easy to start</h3>
                  <p class="text-gray-600">List your space in minutes and start hosting immediately.</p>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
                  <h3 class="text-xl font-semibold text-gray-800 mb-3">Safe and secure</h3>
                  <p class="text-gray-600">We verify all guests and provide protection for hosts.</p>
                </div>
                <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
                  <h3 class="text-xl font-semibold text-gray-800 mb-3">Earn more</h3>
                  <p class="text-gray-600">Set your own prices and earn extra income on your schedule.</p>
                </div>
              </div>



      </main>

      <!-- Footer -->
      <footer class="bg-gray-100 mt-12 py-8">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center text-gray-600">
            © 2024 Airbnb Clone. Made with Tailwind CSS.
          </div>
        </div>
      </footer>
  </body>

  </html>