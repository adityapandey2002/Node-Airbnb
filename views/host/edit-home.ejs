<%- include('../partials/head') %>

  <body class="bg-gray-50 min-h-screen">
    <%- include('../partials/nav') %>

      <main class="max-w-2xl mx-auto px-4 py-8">
        <div class="bg-white rounded-xl shadow-md p-8">
          <h1 class="text-3xl font-bold text-gray-900 mb-6">
            <%= editing ? 'Edit' : 'Add' %> Your Home
          </h1>

          <form action="/host/<%= editing ? 'edit-home' : 'add-home' %>" method="POST" class="space-y-6">
            <input type="hidden" name="id" value="<%= home ? home.id : '' %>">
            <div>
              <label for="housename" class="block text-sm font-medium text-gray-700 mb-2">
                House Name
              </label>
              <input type="text" name="housename" id="housename" value="<%= home ? home.housename : '' %>"
                placeholder="Enter your house name"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500 outline-none transition duration-150"
                required />
            </div>

            <div>
              <label for="price" class="block text-sm font-medium text-gray-700 mb-2">
                Price per Night
              </label>
              <input type="number" name="price" id="price" placeholder="Enter price per night"
                value="<%= home ? home.price : '' %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500 outline-none transition duration-150"
                required />
            </div>

            <div>
              <label for="location" class="block text-sm font-medium text-gray-700 mb-2">
                Location
              </label>
              <input type="text" name="location" id="location" placeholder="Enter location"
                value="<%= home ? home.location : '' %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500 outline-none transition duration-150"
                required />
            </div>

            <div>
              <label for="rating" class="block text-sm font-medium text-gray-700 mb-2">
                Rating (1-5)
              </label>
              <input type="number" name="rating" id="rating" min="1" max="5" step="0.1" placeholder="Enter rating"
                value="<%= home ? home.rating : '' %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500 outline-none transition duration-150"
                required />
            </div>

            <div>
              <label for="photoUrl" class="block text-sm font-medium text-gray-700 mb-2">
                Photo URL
              </label>
              <input type="url" name="photoUrl" id="photoUrl"
                placeholder="Enter photo URL (e.g., https://example.com/image.jpg)"
                value="<%= home ? home.photoUrl : '' %>"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-rose-500 focus:border-rose-500 outline-none transition duration-150"
                required />
            </div>

            <button type="submit" value="<%= editing ? 'update' : 'add' %>Home"
              class="w-full bg-gradient-to-r from-rose-500 to-rose-600 text-white py-3 px-6 rounded-lg hover:from-rose-600 hover:to-rose-700 transition duration-300 font-medium">
              <%= editing ? 'Update' : 'Add' %> Home
            </button>
          </form>
        </div>
      </main>

      <!-- Footer -->
      <footer class="bg-gray-100 mt-12 py-8">

      </footer>
  </body>

  </html>