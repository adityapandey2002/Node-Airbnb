<%- include('../partials/head') %>

  <body class="bg-gray-50 min-h-screen">
    <%- include('../partials/nav') %>

      <!-- Main Content -->
      <main class="max-w-6xl mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">Here are the Homes List</h1>

        <!-- Registered Homes -->
        <div class="mt-12">
          <h2 class="text-2xl font-semibold text-gray-800 mb-6">Available Homes</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <% if (registeredHomes && registeredHomes.length> 0) { %>
              <% registeredHomes.forEach(function(home) { %>
                <a href="/homes/<%= home.id %>" class="block transform transition-all duration-300 hover:scale-[1.02]">
                  <div
                    class="bg-white/80 backdrop-blur-sm rounded-2xl shadow-lg hover:shadow-xl border border-gray-100">
                    <div class="p-4">
                      <!-- Image Grid -->
                      <div class="grid grid-cols-4 gap-3 mb-4">
                        <div class="col-span-4 md:col-span-2 md:row-span-2 overflow-hidden rounded-xl">
                          <img alt="" src="https://cdn.pixabay.com/photo/2017/04/10/22/28/residence-2219972_1280.jpg"
                            class="h-[200px] md:h-[320px] w-full object-cover hover:scale-110 transition-transform duration-700">
                        </div>
                        <div class="hidden md:block col-span-2 overflow-hidden rounded-xl">
                          <img alt="" src="https://cdn.pixabay.com/photo/2017/02/07/18/16/living-room-2046668_1280.jpg"
                            class="h-[156px] w-full object-cover hover:scale-110 transition-transform duration-700">
                        </div>
                        <div class="hidden md:block col-span-2 overflow-hidden rounded-xl">
                          <img alt="" src="https://cdn.pixabay.com/photo/2013/07/04/18/33/western-143213_1280.jpg"
                            class="h-[156px] w-full object-cover hover:scale-110 transition-transform duration-700">
                        </div>
                      </div>

                      <!-- Content -->
                      <div class="space-y-4">
                        <div class="flex items-start justify-between">
                          <h3 class="text-xl font-semibold text-gray-800">
                            <%= home.houseName %>
                          </h3>
                          <span class="px-3 py-1 text-sm font-medium text-pink-600 bg-pink-50 rounded-full">
                            Superhost
                          </span>
                        </div>

                        <div class="flex items-center gap-2">
                          <span class="flex items-center gap-1 text-pink-600">
                            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor"
                              aria-hidden="true" class="w-4 h-4">
                              <path fill-rule="evenodd"
                                d="M8 1.75a.75.75 0 0 1 .692.462l1.41 3.393 3.664.293a.75.75 0 0 1 .428 1.317l-2.791 2.39.853 3.575a.75.75 0 0 1-1.12.814L7.998 12.08l-3.135 1.915a.75.75 0 0 1-1.12-.814l.852-3.574-2.79-2.39a.75.75 0 0 1 .427-1.318l3.663-.293 1.41-3.393A.75.75 0 0 1 8 1.75Z"
                                clip-rule="evenodd"></path>
                            </svg>
                            <span class="font-medium">
                              <%= home.rating %>
                            </span>
                          </span>
                          <span class="text-sm text-gray-500">(128 reviews)</span>
                          <span class="text-gray-300">·</span>
                          <span class="text-sm font-medium text-gray-800">
                            <%= home.location %>
                          </span>
                        </div>

                        <div class="border-t border-gray-100 pt-4 flex items-center justify-between">
                          <div>
                            <span class="text-2xl font-bold text-gray-900">₹<%= home.price %></span>
                            <span class="text-gray-500 text-sm">/night</span>
                          </div>
                          <span
                            class="inline-flex items-center justify-center rounded-full bg-gradient-to-r from-pink-500 to-rose-500 px-4 py-2 text-sm font-semibold text-white shadow-sm hover:from-pink-600 hover:to-rose-600 transition-all duration-300">
                            Check availability
                          </span>
                        </div>
                      </div>
                    </div>
                  </div>
                </a>
                <% }); %>
                  <% } else { %>
                    <div class="col-span-2 text-center py-12 bg-white rounded-2xl shadow-sm">
                      <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor"
                        viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5"
                          d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                      </svg>
                      <p class="text-gray-500 text-lg">No homes available yet. Be the first to add one!</p>
                    </div>
                    <% } %>
          </div>
        </div>

        <!-- Featured Section -->
        <div class="bg-white rounded-xl shadow-md p-6 mb-8 mt-12">
          <h2 class="text-2xl font-semibold text-gray-800 mb-4">Ready to host?</h2>
          <p class="text-gray-600 mb-6">Share your space and earn extra income by becoming a host on Airbnb.</p>
          <a href="/host/add-home"
            class="inline-block bg-gradient-to-r from-rose-500 to-rose-600 text-white px-6 py-3 rounded-lg hover:from-rose-600 hover:to-rose-700 transition duration-300">
            Get Started →
          </a>
        </div>

        <!-- Benefits Grid -->
        <div class="grid md:grid-cols-3 gap-6 mt-8">
          <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Easy to start</h3>
            <p class="text-gray-600">List your space in minutes and start hosting immediately.</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Safe and secure</h3>
            <p class="text-gray-600">We verify all guests and provide protection for hosts.</p>
          </div>
          <div class="bg-white p-6 rounded-xl shadow-sm hover:shadow-md transition duration-300">
            <h3 class="text-xl font-semibold text-gray-800 mb-3">Earn more</h3>
            <p class="text-gray-600">Set your own prices and earn extra income on your schedule.</p>
          </div>
        </div>
      </main>

      <!-- Footer -->
      <footer class="bg-gray-100 mt-12 py-8">
        <div class="max-w-6xl mx-auto px-4">
          <div class="text-center text-gray-600">
            © 2024 Airbnb Clone. Made with Tailwind CSS.
          </div>
        </div>
      </footer>
  </body>

  </html>